{
    "manifest_version":2,
    "name":"MwJson",
    "version":"0.44.1",
    "author":[
        "[https://github.com/simontaurus Simon Stier]"
    ],
    "url":"https://github.com/simontaurus/mediawiki-extensions-MwJson",
    "descriptionmsg":"mw-json-desc",
    "namemsg":"mw-json-name",
    "license-name":"AGPL-3.0-or-later",
    "type":"editor",
    "requires":{
        "MediaWiki":">= 1.35",
        "extensions": {
            "WSSlots": "*",
            "SemanticMediaWiki": "*",
            "SemanticCompoundQueries": "*",
            "CodeEditor": "*",
            "CodeMirror": "*",
            "VEForAll": "*"
		}
    },
    "MessagesDirs":{
        "MwJson":[
            "i18n"
        ]
    },
    "ResourceModules":{
        "ext.mwjson":{
            "localBasePath":"modules/ext.MwJson",
            "remoteExtPath":"MwJson/modules/ext.MwJson",
            "styles":[
                "MwJson.css",
                "bootstrap.min.css",
                "fontawesome.min.css",
                "spectre-icons.min.css",
                "bootstrap5-toggle.min.css"
            ],
            "scripts":[
                "MwJson.js",
                "bootstrap.min.js",
                "bootstrap5-toggle.ecmas.min.js"
            ],
            "position":"top"
        },
        "ext.mwjson.util":{
            "localBasePath":"modules/ext.MwJson.util",
            "remoteExtPath":"MwJson/modules/ext.MwJson.util",
            "scripts":[
                "lz-string.min.js",
                "json-schema-ref-parser.js",
                "jsonpath.min.js",
                "MwJson_util.js",
                "MwJson_schema.js",
                "MwJson_extData.js",
                "jsonschema-jsonschema.js"
            ],
            "dependencies": [
                "ext.mwjson"
            ],
            "position":"bottom"
        },
        "ext.mwjson.api":{
            "localBasePath":"modules/ext.MwJson.api",
            "remoteExtPath":"MwJson/modules/ext.MwJson.api",
            "scripts":[
                "MwJson_cache.js",
                "MwJson_api.js"
            ],
            "dependencies": [
                "ext.mwjson.util"
            ],
            "position":"bottom"
        },
        "ext.mwjson.parser":{
            "localBasePath":"modules/ext.MwJson.parser",
            "remoteExtPath":"MwJson/modules/ext.MwJson.parser",
            "scripts":[
                "CeJS_wiki.min.js",
                "MwJson_parser.js"
            ],
            "dependencies": [
                "ext.mwjson.util"
            ],
            "position":"bottom"
        },
        "ext.mwjson.editor":{
            "localBasePath":"modules/ext.MwJson.editor",
            "remoteExtPath":"MwJson/modules/ext.MwJson.editor",
            "styles":[
                "autocomplete.min.css",
                "flatpickr.min.css",
                "json-editor.css",
                "jsoneditor.css"
            ],
            "scripts":[
                "handlebars.min.js",
                "autocomplete.min.js",
                "imask.min.js",
                "signature_pad.umd.min.js",
                "flatpickr.min.js",
                "json-editor.min.js",
                "jsoneditor.min.js",
                "MwJson_editor.js",
                "MwJson_editor_ui.js",
                "MwJson_editor_init.js"
            ],
            "dependencies": [
                "ext.mwjson.api",
		        "ext.mwjson.parser"
            ],
            "position":"bottom",
            "messages": [
                "mwjson-editor-submit-save",
                "mwjson-editor-submit-query",
                "mwjson-editor-saving",
